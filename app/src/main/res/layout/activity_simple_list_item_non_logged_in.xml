<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_bg_full_charcoal"
    tools:context=".SimpleListItemNonLoggedIn">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/textViewEntryTitlePopUp"
            android:layout_width="290dp"
            android:layout_height="110dp"
            android:background="@drawable/title_bg"
            android:elevation="10dp"
            android:fontFamily="@font/oxanium_bold"
            android:minHeight="100dp"
            android:paddingStart="20dp"
            android:paddingTop="30dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/purple_200"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageViewCloseWindow"
            android:layout_width="60dp"
            android:layout_height="57dp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            app:srcCompat="@drawable/baseline_close_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    </LinearLayout>

    <VideoView
        android:id="@+id/videoViewSimplePopUp"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />


    <TextView
        android:id="@+id/textViewEntryDescriptionPopUp"
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:background="@drawable/recylcer_item_title_bg"
        android:elevation="10dp"
        android:fontFamily="@font/oxanium_bold"
        android:minHeight="500dp"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:paddingEnd="20dp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/purple_2"
        android:textSize="20sp" />



    <TextView
        android:id="@+id/textViewEntryDifficultyPopUp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="10dp"
        android:background="@color/violet"
        android:fontFamily="@font/oxanium_bold"
        android:minHeight="500dp"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:paddingEnd="20dp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/scouts_purple"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/body_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:fontFamily="@font/oxanium_bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAlignment="center"
            android:text="@string/login_to_begin_tracking"
            android:textColor="@color/scouts_purple"
            android:textSize="23sp" />


    </LinearLayout>





</LinearLayout>