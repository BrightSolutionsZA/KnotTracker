<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/home_bg"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/textViewWelcomeUser"
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/home_header_text"
        android:elevation="10dp"
        android:fontFamily="@font/oxanium_bold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="10sp"
        android:textColor="@color/scouts_purple"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/get_ready_to"
        android:elevation="10dp"
        android:padding="40dp"
        android:textSize="35sp"
        android:textColor="@color/purple_200"
        android:fontFamily="@font/oxanium_bold"
        android:background="@drawable/title_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeUser"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/track_your_favourite_knots_n_n_track_the_completion_status_of_your_knot_n_n_add_knots_to_a_goal_list_n_n_learn_step_by_step_how_to_do_the_knots_with_embedded_video_tutorials_n_n_n_nstart_your_pioneering_journey_with_knottracker"
        android:elevation="10dp"
        android:padding="40dp"
        android:textSize="25sp"
        android:textColor="@color/scouts_purple"
        android:fontFamily="@font/oxanium_bold"
        android:background="@drawable/home_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeUser"
        app:layout_constraintVertical_bias="0.12" />


</LinearLayout>